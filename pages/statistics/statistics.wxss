/* pages/statistics/statistics.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.time-select {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.picker {
  font-size: 32rpx;
  color: #333;
}

.overview {
  display: flex;
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.overview-item {
  flex: 1;
  text-align: center;
}

.overview-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.overview-item .amount {
  font-size: 36rpx;
  font-weight: bold;
}

.amount.expense {
  color: #f5222d;
}

.amount.income {
  color: #52c41a;
}

.category-stats {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
}

.stats-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.stats-item {
  margin-bottom: 30rpx;
}

.category-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 28rpx;
  color: #666;
}

.category-percent {
  font-size: 28rpx;
  color: #999;
}

.progress-bar {
  background: #f0f0f0;
  height: 10rpx;
  border-radius: 5rpx;
  margin-bottom: 10rpx;
}

.progress {
  background: #1296db;
  height: 100%;
  border-radius: 5rpx;
}

.stats-item .amount {
  font-size: 28rpx;
  color: #333;
}