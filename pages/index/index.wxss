/* pages/index/index.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.month-select {
  text-align: center;
  margin-bottom: 20rpx;
}

.month {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.year {
  font-size: 28rpx;
  color: #666;
}

.amount-info {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.expense, .income {
  text-align: center;
}

.label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

.amount {
  font-size: 32rpx;
  font-weight: bold;
}

.bill-list {
  background-color: #fff;
  padding: 0 30rpx;
}

.bill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.bill-item:last-child {
  border-bottom: none;
}

.left .category {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.left .date {
  font-size: 24rpx;
  color: #999;
}

.right .amount {
  font-size: 32rpx;
  font-weight: bold;
}

.right .amount.expense {
  color: #f5222d;
}

.right .amount.income {
  color: #52c41a;
}