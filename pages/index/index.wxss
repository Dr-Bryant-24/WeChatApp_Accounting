/* pages/index/index.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.month-select {
  text-align: center;
  margin-bottom: 20rpx;
}

.month {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.year {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  margin-right: 20rpx;
  font-weight: 500;
}

.amount-info {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.expense, .income {
  text-align: center;
}

.label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

.amount {
  font-size: 32rpx;
  font-weight: bold;
}

.bill-list {
  background-color: #fff;
  padding: 0 30rpx;
  margin-top: -30rpx;
  position: relative;
  z-index: 1;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.bill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.bill-item:last-child {
  border-bottom: none;
}

.left .category {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.left .date {
  font-size: 24rpx;
  color: #999;
}

.right .amount {
  font-size: 32rpx;
  font-weight: bold;
}

.right .amount.expense {
  color: #f5222d;
}

.right .amount.income {
  color: #52c41a;
}

.page {
  min-height: 100vh;
  background: #f8f9fd;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 顶部卡片 */
.header-card {
  background: linear-gradient(135deg, #3494e6, #ec6ead);
  padding: 40rpx 30rpx 60rpx;
  color: white;
  position: relative;
}

.month-picker {
  margin-bottom: 40rpx;
}

.picker-content {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.year {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.95);
  margin-right: 10rpx;
  font-weight: 500;
}

.month {
  font-size: 40rpx;
  font-weight: 600;
  margin-right: 10rpx;
}

.picker-arrow {
  font-size: 32rpx;
  transform: rotate(90deg);
  display: inline-block;
}

.overview {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10px);
}

.overview-item {
  flex: 1;
  text-align: center;
}

.divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
}

.label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: 10rpx;
  display: block;
}

.amount {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 日期卡片 */
.date-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.date-header {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
  color: #666;
  font-size: 26rpx;
}

.date-info {
  display: flex;
  align-items: center;
}

.date {
  color: inherit;
}

.day-of-week {
  opacity: 0.8;
}

.daily-amount {
  display: flex;
  gap: 20rpx;
}

.daily-amount .expense,
.daily-amount .income {
  color: inherit;
}

/* 账单项目 */
.bill-items {
  padding: 0 30rpx;
}

.bill-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.bill-item:last-child {
  border-bottom: none;
}

.category-info {
  display: flex;
  align-items: center;
}

.icon-wrap {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.icon-wrap.expense {
  background: linear-gradient(135deg, #ff6b6b, #ee0979);
  color: white;
}

.icon-wrap.income {
  background: linear-gradient(135deg, #00b09b, #96c93d);
  color: white;
}

.icon {
  font-size: 40rpx;
}

.bill-detail {
  display: flex;
  flex-direction: column;
}

.category-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.description {
  font-size: 24rpx;
  color: #999;
}

.amount-info {
  font-size: 32rpx;
  font-weight: 500;
}

.amount-info.expense {
  color: #ff6b6b;
}

.amount-info.income {
  color: #00b09b;
}

/* 空状态 */
.empty-state {
  padding: 200rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
}

/* 添加按钮 */
.add-button {
  position: fixed;
  right: 40rpx;
  bottom: calc(40rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #3494e6, #ec6ead);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(236, 110, 173, 0.3);
  transition: all 0.3s ease;
  z-index: 100;
}

.add-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(236, 110, 173, 0.2);
}

.add-icon {
  color: white;
  font-size: 50rpx;
  line-height: 1;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
}