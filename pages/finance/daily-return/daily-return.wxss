.container {
  padding: 30rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 产品卡片 */
.product-card {
  background: linear-gradient(135deg, #43cea2, #185a9d);
  padding: 40rpx 30rpx;
  border-radius: 20rpx;
  color: white;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(67, 206, 162, 0.2);
}

.product-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.product-amount {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 表单容器 */
.form-container {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  padding: 12rpx 0;
}

.currency-symbol {
  color: #333;
  font-size: 32rpx;
  margin-right: 8rpx;
}

input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 2rpx solid #eee;
  font-size: 32rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 按钮样式 */
.button-group {
  margin: 40rpx 0;
}

.submit-btn {
  background: linear-gradient(135deg, #43cea2, #185a9d);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(67, 206, 162, 0.3);
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(67, 206, 162, 0.2);
}

/* 快捷操作区 */
.quick-actions {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.quick-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.quick-buttons {
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
}

.quick-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.quick-btn:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.quick-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.quick-btn text:last-child {
  font-size: 24rpx;
  color: #666;
}

.history {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
}

.history-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.history-date {
  font-size: 28rpx;
  color: #333;
}

.history-amount {
  font-size: 32rpx;
  color: #1296db;
  font-weight: bold;
}

.history-remark {
  font-size: 24rpx;
  color: #999;
} 