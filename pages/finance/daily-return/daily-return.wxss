.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 60rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

input, .picker {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}

.save-btn {
  background: #1296db;
  color: #fff;
  text-align: center;
  padding: 30rpx 0;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin-bottom: 60rpx;
}

.save-btn.disabled {
  background: #ccc;
}

.history {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
}

.history-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.history-date {
  font-size: 28rpx;
  color: #333;
}

.history-amount {
  font-size: 32rpx;
  color: #1296db;
  font-weight: bold;
}

.history-remark {
  font-size: 24rpx;
  color: #999;
} 