.container {
  height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.title {
  text-align: center;
  padding: 30rpx;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.picker-view {
  width: 100%;
  height: 600rpx;
  margin: 30rpx 0;
}

.indicator {
  height: 80rpx;
  background-color: #f8f8f8;
}

.picker-item {
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.picker {
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  text-align: center;
  margin-bottom: 40rpx;
  font-size: 32rpx;
}

.btn-group {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}

.btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.cancel {
  background: #f5f5f5;
  color: #666;
}

.confirm {
  background: #1296db;
  color: #fff;
} 