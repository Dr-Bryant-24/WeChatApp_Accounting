.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.add-btn {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.add-btn:active {
  transform: scale(0.98);
}

.add-btn .icon {
  font-size: 40rpx;
  margin-right: 12rpx;
  color: #3A7BD5;
}

.add-btn text {
  color: #3A7BD5;
  font-weight: 500;
}

.product-list {
  margin-bottom: 30rpx;
}

.product-item {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.product-item:active {
  transform: scale(0.98);
}

.product-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-title .product-amount {
  font-size: 28rpx;
  font-weight: normal;
  color: #666;
}

.product-header {
  margin-bottom: 30rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.product-amount {
  font-size: 28rpx;
  color: #666;
}

.product-actions {
  display: flex;
  gap: 20rpx;
}

.btn {
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.95);
}

button.btn {
  background: #3A7BD5;
  color: white;
  line-height: 1;
  margin: 0;
}

.btn.delete {
  background: #ff6b6b;
}

.chart-container {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx 0;
  position: relative;
  overflow: hidden;
}

.chart {
  width: 92vw;
  height: 360rpx;
  margin: 0 auto;
}

.chart-hint {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  padding: 12rpx;
  background: #f8f9fa;
  border-radius: 30rpx;
  width: fit-content;
  margin: 16rpx auto 0;
}

.return-stats {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0 0;
  margin-top: 24rpx;
  border-top: 2rpx solid #f5f5f5;
}

.stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stat-item:first-child:after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 2rpx;
  background: #f0f0f0;
}

.stat-item .label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.stat-item .value {
  font-size: 36rpx;
  color: #3A7BD5;
  font-weight: 600;
}

.total-stats {
  background: linear-gradient(135deg, #3A7BD5, #00D2FF);
  padding: 40rpx 30rpx;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(58, 123, 213, 0.2);
  color: white;
}

.total-item {
  text-align: left;
  margin-bottom: 30rpx;
}

.total-item:last-child {
  margin-bottom: 0;
}

.total-item .label {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 10rpx;
}

.total-item .value {
  font-size: 48rpx;
  font-weight: 600;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.product-chart {
  width: 100%;
  height: 100%;
}

.version-info {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
} 