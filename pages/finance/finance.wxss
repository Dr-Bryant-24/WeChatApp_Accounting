.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.add-btn {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-btn .icon {
  font-size: 40rpx;
  margin-right: 10rpx;
}

.product-list {
  margin-bottom: 30rpx;
}

.product-item {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.product-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  color: #333;
}

.product-title .product-amount {
  font-size: 28rpx;
  font-weight: normal;
  color: #666;
}

.product-header {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.product-amount {
  font-size: 28rpx;
  color: #666;
}

.product-actions {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
  width: 80%;
  max-width: 600rpx;
}

.btn {
  font-size: 28rpx;
  padding: 6rpx 12rpx;
  border-radius: 40rpx;
  background: #1296db;
  color: #fff;
  min-height: 60rpx;
  margin: 0;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn.delete {
  background: #ff4d4f;
}

.chart-container {
  height: 500rpx;
  margin: 30rpx 0;
  padding: 0 20rpx;
  overflow: visible;
}

.return-chart {
  width: 100%;
  height: 100%;
}

.return-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.stat-item {
  text-align: center;
}

.stat-item .label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.stat-item .value {
  font-size: 32rpx;
  color: #1296db;
  font-weight: bold;
}

.product-chart {
  width: 90%;
  height: 450rpx;
  margin: 20rpx 0;
  display: block;
}

.chart-hint {
  text-align: center;
  font-size: 20rpx;
  color: #999;
  margin: 10rpx 0;
} 