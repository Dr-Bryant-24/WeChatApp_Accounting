.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 60rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.save-btn {
  background: #1296db;
  color: #fff;
  text-align: center;
  padding: 30rpx 0;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.save-btn.disabled {
  background: #ccc;
} 