.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.product-info {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  color: #666;
  font-size: 28rpx;
}

.info-item .value {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

.returns-table {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.table-header {
  display: flex;
  background: #f8f8f8;
  padding: 20rpx 0;
}

.th {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.table-body .tr {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  transition: background-color 0.3s;
}

.table-body .tr:active {
  background-color: #f5f5f5;
}

.td {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.date-picker-popup {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 999;
}

.mask {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.picker-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  transform: translateY(0);
  transition: transform 0.3s;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-header .title {
  font-size: 32rpx;
  color: #333;
}

.picker-header .cancel,
.picker-header .confirm {
  font-size: 32rpx;
  padding: 10rpx;
}

.picker-header .cancel {
  color: #666;
}

.picker-header .confirm {
  color: #1296db;
}

.picker-view {
  width: 100%;
  height: 400rpx;
}

.indicator {
  height: 80rpx;
  background: rgba(0, 0, 0, 0.05);
}

.picker-item {
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.picker-item.selected {
  color: #1296db;
  font-weight: bold;
}

.import-section {
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.import-btn {
  background: #1296db;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
} 